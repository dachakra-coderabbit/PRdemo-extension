{
  "manifest_version": 3,
  "name": "CodeRabbit PR Hopper",
  "version": "1.0.0",
  "description": "Analyze CodeRabbit comments on GitHub PRs by organization and repository",
  "permissions": [
    "sidePanel",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Open CodeRabbit Analyzer",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
