{
  "manifest_version": 3,
  "name": "CodeRabbit PR Analyzer",
  "version": "1.0.0",
  "description": "Analyze CodeRabbit comments on GitHub PRs by organization and repository",
  "permissions": [
    "sidePanel",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_title": "Open CodeRabbit Analyzer"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
